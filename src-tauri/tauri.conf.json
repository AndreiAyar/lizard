{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lizzard",
  "version": "0.1.0",
  "identifier": "com.ayar.tauri-app",
  "build": {
    "beforeDevCommand": "cd ./src-svelte && npm run dev",
    "beforeBuildCommand": "npm run build:python && cd ./src-svelte && npm run build",
    "frontendDist": "../src-svelte/build",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Lizzard. Lizzard. Lizzard",
        "width": 600,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
     "externalBin": [
      "binaries/lizard-backend"
    ],
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}